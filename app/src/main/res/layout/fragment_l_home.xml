<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.librarian.home.LHomeFragment">

    <ImageView
        android:id="@+id/img_l_home_logo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_margin="15dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/apverse_logo" />

    <TextView
        android:id="@+id/text_l_home_room"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="175dp"
        android:text="Disucssion Room Booking"
        android:textSize="20sp"
        android:textStyle="bold" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cv_l_home_room"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="210dp"
        android:layout_marginHorizontal="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_gravity="center_vertical"
            android:text="Total Number Today: "
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/text_l_home_book"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="35dp"
            android:layout_gravity="center_vertical|right"
            android:text="0"
            android:textSize="25sp"
            android:textStyle="bold"/>

    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/text_l_home_books"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="340dp"
        android:text="@string/menu_reservation"
        android:textSize="20sp"
        android:textStyle="bold" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cv_l_home_books"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="375dp"
        android:layout_marginHorizontal="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_gravity="center_vertical"
            android:text="Total Number: "
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/text_l_home_reservation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="35dp"
            android:layout_gravity="center_vertical|right"
            android:text="0"
            android:textSize="25sp"
            android:textStyle="bold"/>

    </com.google.android.material.card.MaterialCardView>

</FrameLayout>